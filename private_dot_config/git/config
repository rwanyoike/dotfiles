# Ref: https://github.com/so-fancy/diff-so-fancy

[core]
  excludesfile = ignore
  pager = diff-so-fancy | less --tabs=4 -RFX

[interactive]
  diffFilter = diff-so-fancy --patch

[color]
  ui = true

[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[diff-so-fancy]
  rulerWidth = 80

[include]
  path = config.user
